@page "/interest"
@using ProjectFora.Shared;
@inject IUserInterestManager UserInterestManager
@inject IInterestManager InterestManager
@inject IThreadsManager ThreadManager
@inject NavigationManager NavigationManager


<h3>Form-forum Interest:</h3>


{
  


@code {

    [Parameter]
    //UserInterestModel
    public int UserId{ get; set; }
    //InterestModel
    public int InterestId{ get; set; }
    public string Name{ get; set; }
    //ThreadModel


    List<UserInterestModel>userInterests = new ();
    List<InterestModel>interests = new ();
    List<ThreadModel> Threads = new();


    protected override async Task OnInitializedAsync()
    {

        //hämtar alla interest från interestManager
        interests = await InterestManager.GetAllInterest();
        //hämtar alla interest från interestManager
        userInterests = await UserInterestManager.GetUserInterest();
        //hämta alla trådar
        Threads = await ThreadManager.GetAllThreads();

    }
    //metod som navigerar till delete controllern i interestManagern
    void HandleDeleteInterest(int InterestId)
    {
        NavigationManager.NavigateTo($"UserInterest/DeleteUserInterest/{InterestId}");
    }
    //metod som navigerar till edit/update controllern i InterestManagern
    void HandleUpdateInterest()
    {
        NavigationManager.NavigateTo($"UserInterest/UpdateUserInterest/{InterestId}");
    }
}
