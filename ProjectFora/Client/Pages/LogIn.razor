@page "/login"
@using ProjectFora.Shared.AccountModels
@inject IAccountManager AccountManager
@inject NavigationManager NavigationManager
@inject IInterestManager InterestManager
@inject ILocalStorageService LocalStorage

<div class="card">
    <h4 class="card-header">Login</h4>
    <div class="card-body">
        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>Username</label>
                <InputText @bind-Value="loginModel.Email" class="form-control" />
                <ValidationMessage For="@(() => loginModel.Email)" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="loginModel.Password" type="password" class="form-control" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>
              <button type="submit" class="btn btn-primary">Login</button>
            <NavLink href="register" class="btn btn-link">Register</NavLink>
        </EditForm>
    </div>
</div>

@code {
    private LoginModel loginModel = new LoginModel();
    public AccountUserModel CurrentUser { get; set; }

    private async void HandleLogin()
    {
        await AccountManager.Login(loginModel);
        var userEmail = await LocalStorage.GetItemAsStringAsync("Username");
        userEmail = userEmail.Replace("\"", "");
       CurrentUser = await InterestManager.CurrentUser(userEmail);

        StateHasChanged();
        NavigationManager.NavigateTo("/");
    }

}
